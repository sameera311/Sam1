using System;

class Program
{
    static void Main()
    {
        Console.Write("Enter a number: ");
        int num = Convert.ToInt32(Console.ReadLine());

        if (num % 2 == 0)
        {
            Console.WriteLine("{0} is even.", num);
        }
        else
        {
            Console.WriteLine("{0} is odd.", num);
        }
    }
}
